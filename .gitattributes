# Auto detect text files and perform LF normalization
* text=auto

# Force LF for source files (consistent across Windows/Linux/macOS)
*.py text eol=lf
*.md text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.txt text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.dat binary
*.blend binary
*.zip binary

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf
